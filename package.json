{
  "name": "common-lib-vue",
  "version": "3.1.0",
  "homepage": "https://github.com/bcgov/common-lib-vue/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/bcgov/common-lib-vue.git"
  },
  "type": "module",
  "files": [
    "dist/*",
    "src/**/*.vue"
  ],
  "main": "./dist/common-lib-vue.umd.cjs",
  "module": "./dist/common-lib-vue.js",
  "exports": {
    ".": {
      "import": "./dist/common-lib-vue.js",
      "require": "./dist/common-lib-vue.umd.cjs"
    },
    "./dist/*.css": {
      "import": "./dist/*.css",
      "require": "./dist/*.css"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test:unit": "vitest  --coverage.enabled=false",
    "test:unit:coverage": "vitest  --coverage.enabled=true",
    "test:e2e": "start-server-and-test 'storybook dev --no-open -p 6006' 6006 'cypress open --e2e'",
    "test:e2e:headless": "start-server-and-test 'storybook dev --no-open -p 6006' 6006 'cypress run --browser chrome'",
    "lint": "eslint .",
    "format": "prettier .  --write",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@bcgov/bootstrap-v5-theme": "^1.0.1",
    "axios": "^1.7.4",
    "core-js": "^3.37.1",
    "date-fns": "^3.6.0",
    "lodash": "^4.17.21",
    "maska": "^1.5.0",
    "pdfjs-dist": "^4.4.168",
    "sha1": "^1.1.1",
    "uuid": "^8.3.2",
    "vue": "^3.4.21",
    "web-streams-polyfill": "^4.0.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.1.5",
    "@storybook/vue3-vite": "^8.1.5",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitest/coverage-v8": "^2.0.3",
    "@vitest/web-worker": "^2.0.3",
    "@vue/test-utils": "^2.4.5",
    "cypress": "^13.7.2",
    "eslint": "^8.57.0",
    "eslint-plugin-compat": "^6.0.0",
    "eslint-plugin-cypress": "^3.4.0",
    "eslint-plugin-vue": "^9.23.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.3.0",
    "start-server-and-test": "^2.0.3",
    "storybook": "^8.1.5",
    "storybook-addon-mock": "^5.0.0",
    "vite": "^5.2.12",
    "vitest": "^2.0.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not Opera > 0",
    "not op_mini all"
  ]
}
